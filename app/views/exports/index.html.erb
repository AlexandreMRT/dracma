<div class="space-y-4">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold">Exports</h1>
    <div class="flex gap-2">
      <%= link_to "CSV", exports_csv_path, class: "bg-gray-700 hover:bg-gray-600 text-white px-3 py-1 rounded text-sm" %>
      <%= link_to "JSON", exports_json_path, class: "bg-gray-700 hover:bg-gray-600 text-white px-3 py-1 rounded text-sm" %>
      <%= link_to "Generate Reports", exports_report_path, class: "bg-emerald-600 hover:bg-emerald-700 text-white px-3 py-1 rounded text-sm" %>
    </div>
  </div>

  <% if @exports.any? %>
    <div class="bg-gray-800 rounded-lg border border-gray-700">
      <table class="w-full text-sm">
        <thead>
          <tr class="text-gray-400 text-left">
            <th class="px-4 py-2">File</th>
            <th class="px-4 py-2 text-right">Size</th>
            <th class="px-4 py-2 text-right">Modified</th>
          </tr>
        </thead>
        <tbody>
          <% @exports.each do |e| %>
            <tr class="border-t border-gray-700">
              <td class="px-4 py-2 font-mono text-emerald-400"><%= e[:name] %></td>
              <td class="px-4 py-2 text-right text-gray-400"><%= number_to_human_size(e[:size]) %></td>
              <td class="px-4 py-2 text-right text-gray-400"><%= e[:mtime].strftime("%Y-%m-%d %H:%M") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-gray-800 rounded-lg p-8 border border-gray-700 text-center text-gray-400">
      No export files yet. Generate reports or export data to create files.
    </div>
  <% end %>
</div>
