<% content_for(:title) { "Edit #{@portfolio.name} â€” Dracma" } %>

<div class="max-w-md mx-auto space-y-4">
  <h1 class="text-2xl font-bold">Edit Portfolio</h1>

  <%= form_with model: @portfolio, class: "space-y-4" do |f| %>
    <div>
      <label class="block text-sm text-gray-400 mb-1">Name</label>
      <%= f.text_field :name, class: "w-full bg-gray-700 border border-gray-600 text-white rounded px-3 py-2", required: true %>
    </div>
    <div class="flex items-center gap-2">
      <%= f.check_box :is_default, class: "rounded bg-gray-700 border-gray-600" %>
      <label class="text-sm text-gray-300">Set as default portfolio</label>
    </div>
    <div class="flex gap-2">
      <%= f.submit "Update", class: "bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded cursor-pointer" %>
      <%= link_to "Cancel", portfolio_path(@portfolio), class: "bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>

  <div class="pt-4 border-t border-gray-700">
    <%= button_to "Delete Portfolio", portfolio_path(@portfolio), method: :delete,
      class: "text-red-400 hover:text-red-300 text-sm",
      data: { turbo_confirm: "Delete #{@portfolio.name}? This cannot be undone." } %>
  </div>
</div>
